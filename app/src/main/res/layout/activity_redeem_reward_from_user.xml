<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alfasunny.homeuser.RedeemRewardFromUser">

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="376dp"
        android:layout_height="118dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#dddddd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo001" />

    <TextView
        android:id="@+id/inputRedeemVal"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="Redeemed Reward"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView98"
        app:layout_constraintTop_toBottomOf="@+id/textView98" />

    <TextView
        android:id="@+id/textView98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Given Discount:"
        android:textSize="24sp"

        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/textView93"
        app:layout_constraintTop_toBottomOf="@+id/textView93" />

    <TextView
        android:id="@+id/textView93"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:text="Available Points:"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/textView35"
        app:layout_constraintStart_toStartOf="@+id/textView35"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Enter Price:"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView22" />

    <EditText
        android:id="@+id/inputValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="40"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/inputRedeemVal"
        app:layout_constraintLeft_toRightOf="@+id/inputRedeemVal"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView103"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="40"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView98"
        app:layout_constraintEnd_toEndOf="@+id/inputValue"
        app:layout_constraintLeft_toRightOf="@+id/textView98"
        app:layout_constraintStart_toStartOf="@+id/inputValue" />

    <TextView
        android:id="@+id/availablePoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView93"
        app:layout_constraintEnd_toEndOf="@+id/inputValue"
        app:layout_constraintLeft_toRightOf="@+id/textView93"
        app:layout_constraintStart_toStartOf="@+id/inputValue" />

    <EditText
        android:id="@+id/inputPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="205"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView35"

        app:layout_constraintEnd_toEndOf="@+id/inputValue"
        app:layout_constraintLeft_toRightOf="@+id/textView35"
        app:layout_constraintStart_toStartOf="@+id/inputValue" />

    <Button
        android:id="@+id/btnRedeemReward"
        android:layout_width="357dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:background="#dddddd"
        android:text="Redeem  Reward"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputRedeemVal" />

    <include
        android:id="@+id/include5"
        layout="@layout/foot_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
